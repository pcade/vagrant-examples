sudo apt install -y bridge-utils iproute2

sudo brctl addbr br0
sudo ip link add veth-host type veth peer name veth-ns
sudo ip addr flush dev enp0s8
sudo brctl addif br0 enp0s8
sudo brctl addif br0 veth-host
sudo ip addr add 192.168.56.11/24 dev br0
sudo ip link set dev veth-host up
sudo ip link set dev enp0s8 up
sudo ip link set dev br0 up
sudo ip netns add ns1
sudo ip link set veth-ns netns ns1
sudo ip netns exec ns1 ip link set dev veth-ns up
sudo ip netns exec ns1 ip addr add 192.168.56.200/24 dev veth-ns

brctl show
bridge fdb show br br0

sudo tcpdump -ni br0 icmp -c 5
